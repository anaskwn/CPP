#include <iostream>
#include <cmath> // Для математических функций
using namespace std;

// Функция для вычисления площади N-угольника
double Area(double A, int N) {
    // Проверяем, что количество сторон N не меньше 3 и длина стороны A положительна
    if (N < 3 || A <= 0) {
        cerr << "Количество сторон должно быть не менее 3, а длина стороны должна быть положительной!" << endl;
        return -1; // Возвращаем -1 в случае ошибки
    }
    // Вычисляем площадь N-угольника по формуле
    double S = (N * A * A) / (4 * tan(M_PI / N));
    return S; // Возвращаем рассчитанную площадь
}

int main() {
    setlocale(0, "Russian");

    double A; // Переменная для длины стороны
    int N; // Переменная для количества сторон

    // Запрашиваем у пользователя длину стороны
    cout << "Введите длину стороны (A): ";
    cin >> A;
    // Запрашиваем у пользователя количество сторон
    cout << "Введите количество сторон (N): ";
    cin >> N;

    // Вызываем функцию для вычисления площади
    double S = Area(A, N);

    // Если S не равно -1, значит, вычисление прошло успешно
    if (S != -1) {
        cout << "Площадь составляет: " << S << endl;
    }

    return 0; // Возвращаем 0 для обозначения успешного завершения программы
}
